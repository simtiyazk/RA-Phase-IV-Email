//- Custom Mixins

mixin addImg(src,alt)
    //- Check if  src has http or https in the URL
    - src = (src.toLowerCase().indexOf('http')+1) ? src : imagePath+src
    -var imgStyle = {'display': 'block', 'padding': '0', color:'#ffffff', 'font-family':'Helvetica, arial, sans-serif', 'font-size': '16px'}
    img(src=src alt=alt border="0" style=imgStyle)&attributes(attributes)

mixin vSpacer(height, cls, colspan = "1", width_p = "100%")
  tr&attributes(attributes)
    td(width=width_p class=cls height=height style=`font-size:0px; line-height:${height}px;mso-line-height-rule:exactly;` colspan=colspan) &nbsp;

mixin hSpacer(width, cls)
  td(width=width class=cls height=1 style=`font-size:0px; line-height:1px;mso-line-height-rule:exactly;`) &nbsp;

mixin spacer(size)
    span(style=`font-size:0px; width=${size.width ? size.width : 1}px; height:${size.height ? size.height: 1}px; line-height:${size.height ? size.height: 1}px;mso-line-height-rule:exactly;display:block;`)&attributes(attributes) &nbsp;

mixin line(height, color)
  tr&attributes(attributes)
    td(width="100%" height=height style=`font-size:0px; line-height:${height}px;mso-line-height-rule:exactly;background-color:${color}` bgcolor=color) &nbsp;
mixin container(bgColor, topPadding, rightPadding, bottomPadding, leftPadding)
  table(width="600" align="center" class="mobile-table container "+attributes.class bgcolor=bgColor style=attributes.style)&attributes(tableAtt)
    +vSpacer(topPadding)
    tr
      td
        table(align="center" width="100%")&attributes(tableAtt)
          tr
            +hSpacer(leftPadding)
            td(align="center")
              table(width="100%")&attributes(tableAtt)
                tr
                  td(width="100%" align="center")
                    if block
                      block
            +hSpacer(rightPadding)
    +vSpacer(bottomPadding)

mixin containerFluid(bgColor, topPadding, rightPadding, bottomPadding, leftPadding)
  table(width=attributes.width align="center" class="mobile-table container-fluid "+attributes.class bgcolor=bgColor style=attributes.style)&attributes(tableAtt)
    +vSpacer(topPadding)
    tr
      td
        table(width="100%")&attributes(tableAtt)
          tr
            +hSpacer(leftPadding)
            td
              table(width="100%")&attributes(tableAtt)
                tr
                  td(align="center")
                    if block
                      block
            +hSpacer(rightPadding)
    +vSpacer(bottomPadding)

